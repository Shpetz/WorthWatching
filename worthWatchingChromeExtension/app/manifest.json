{
  "manifest_version": 2,

  "name": "Worth Watching",
  "description": "A simple movie rating helper",
  "version": "1.0",
  "author": "Surya Das",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [ "content.js" ]
    }
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}