{
  "manifest_version": 2,

  "name": "Worth Watching",
  "description": "A simple movie rating helper",
  "version": "1.0",
  "author": "Surya Das",

  "background": {
    "scripts": [ "popup.js" ],
    "persistent": true
  },

  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}